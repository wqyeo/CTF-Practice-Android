<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice CTF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/wqyeo/CTF-Practice-Android"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openURL"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/keyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEY: Derpee"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_below="@id/textViewSubtitle"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="32dp"
        android:layout_marginStart="42dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/valueCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VAL: CODE HERE LATER..."
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_below="@id/keyCode"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="14dp"
        android:layout_marginStart="42dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/hintCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint: Same encryption/decryption as app..."
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_below="@id/keyCode"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="16dp"
        android:layout_marginStart="42dp"/>


</RelativeLayout>